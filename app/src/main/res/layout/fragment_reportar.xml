<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#87CEFA"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reportar Actividad Ilegal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <!-- Campo de descripción -->
    <EditText
        android:id="@+id/etdescription"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Describe la actividad"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:gravity="top"
        android:layout_marginBottom="16dp" />

    <!-- Botones para tomar foto/video y usar ubicación -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnfoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tomar Foto/Video"
            android:drawableStart="@drawable/photo_camera_24px"
            android:backgroundTint="#00BFFF"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/use_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Usar Ubicación"
            android:drawableStart="@drawable/location_on_24px"
            android:backgroundTint="#32CD32"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Botón para enviar reporte -->
    <Button
        android:id="@+id/submit_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar Reporte"
        android:backgroundTint="#0000FF"
        android:textColor="#FFFFFF" />
</LinearLayout>